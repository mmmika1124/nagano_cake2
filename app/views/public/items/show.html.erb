<div class="container">
  <div class="row">
    <div class="col-2">
      <%= render 'layouts/search' %>
    </div>
    <div class="col-10">
      <div class="row">
        <div class="col-4">
          <%= attachment_image_tag @item, :image, format: 'jpg', size: "200x200" %>
        </div>
        <div class="col-5">
          <h3><%= @item.name %></h3><br>
          <div><%= @item.introduction %></div><br><br>
          <h5><%= ((@item.price*1.1).floor).to_s(:delimited) %>円(税込)</h5><br>


        </div>
      </div>
    </div>
  </div>
</div>
