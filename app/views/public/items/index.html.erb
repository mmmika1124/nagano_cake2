<div class="container">
  <div class="row">
    <div class="col-2">
      <%= render 'layouts/search' %>
    </div>
    <div class="col-10">
      <div class="row mx-auto">
        <% if params[:genre_id] %>
          <h3><%= @genre.name %>の商品一覧</h3>
          <h6 class="d-flex align-items-end">（全<%= @all_items.count %>件）</h6>
        <% else %>
          <h3>商品一覧</h3>
          <h6 class="d-flex align-items-end">（全<%= @all_items.count %>件）</h6>
        <% end %>
      </div>
      <div class="row">
        <% if params[:genre_id] %>
          <% @all_items.each do |all_item| %>
            <div class="col-3">
              <%= link_to item_path(all_item.id) do %>
                <%= attachment_image_tag all_item, :image, format: 'jpg', size: "200x200" %><br>
                <%= all_item.name %><br>
                <%= ((all_item.price*1.1).floor).to_s(:delimited) %>円<br>
              <% end %>
              <br>
            </div>
          <% end %>
        <% else %>
          <% @items.each do |item| %>
            <div class="col-3">
              <%= link_to item_path(item.id) do %>
                <%= attachment_image_tag item, :image, format: 'jpg', size: "200x200" %><br>
                <%= item.name %><br>
                <%= ((item.price*1.1).floor).to_s(:delimited) %>円<br>
              <% end %>
              <br>
            </div>
          <% end %>
		    <% end %>
      </div>
    </div>
  </div>
</div>