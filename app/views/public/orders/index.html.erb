<h1>注文履歴一覧</h1>
<br>
<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><% order.created_at %></td>
        <td>
          〒<%= order.postal_code %>
          <%= order.address %>
          <%= order.name %>
        </td>
        <td>
          <% order_details.each do |order_detail| %>
            <%= order.order_detail.item.name %>
          <% end %>
        </td>
        <td><%= order.order_detail.price.to_s(:delimited) %>円</td>
        <td><%= order.status %></td>
        <td></td>
      </tr>
      <% end %>

  </tbody>
</table>
