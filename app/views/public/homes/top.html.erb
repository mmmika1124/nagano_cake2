<div class="container">
  <div class="row">
    <div class="col-2">
      <%= render 'search' %>
    </div>
    <div class="col-10">
      <div class="row"></div>
      <h2>新着商品</h2>
      <div class="row">
        <% @items.first(4).each do |item| %>
          <div class="col">
            <%= attachment_image_tag item, :image, format: 'jpg', size: "200x200" %><br>
            <%= item.name %><br>
            <%= ((item.price*1.1).floor).to_s(:delimited) %>円<br>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
