<h1>登録情報</h1>
<div>
  <%= link_to "編集する", customers_edit_path %>
</div>
<br>
<table>
  <tr>
    <th>氏名</th>
    <td>
      <%= @customer.last_name + "　" + @customer.first_name %>
    </td>
  </tr>
  <tr>
    <th>カナ</th>
    <td>
      <%= @customer.last_name_kana + "　" + @customer.first_name_kana %>
    </td>
  </tr>
  <tr>
    <th>郵便番号</th>
    <td>
      <%= @customer.postal_code %>
    </td>
  </tr>
  <tr>
    <th>住所</th>
    <td>
      <%= @customer.address %>
    </td>
  </tr>
  <tr>
    <th>電話番号</th>
    <td>
      <%= @customer.telephone_number %>
    </td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td>
      <%= @customer.email %>
    </td>
  </tr>
</table>
<br>
<h1>配送先</h1>
<div>
  <%= link_to "一覧を見る", addresses_path %>
</div>
<br>
<h1>注文履歴</h1>
<div>
  <%= link_to "一覧を見る", orders_path %>
</div>
