<h1>注文履歴一覧</h1>
<br>
<table>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
        <td><%= order.name %></td>
        <td><%= order.order_details.sum(:amount) %></td>
        <td><%= order.status_i18n %></td>
      </tr>
      <% end %>
  </tbody>
</table>

