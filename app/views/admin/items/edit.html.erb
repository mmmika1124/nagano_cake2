<h1>商品編集</h1>

<%= form_with model:@item, url:admin_item_path, method: :PATCH, local: true do |f| %>
  <label>商品画像</label>
  <%= f.attachment_field :image %>
  <br>
  <label>商品名</label>
  <%= f.text_field :name %>
  <br>
  <label>商品説明</label>
  <%= f.text_area :introduction %>
  <br>
  <label>ジャンル</label>
  <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: true %>
  <br>
  <label>税抜価格</label>
  <%= f.text_field :price %>円
  <br>
  <label>販売ステータス</label>
  <%= f.radio_button :is_active, :true %>
  <%= f.label :is_active, "販売中" %>
  <%= f.radio_button :is_active, :false %>
  <%= f.label :is_active, "販売停止中" %>
  <br>
  <%= f.submit '変更を保存' %>
<% end %>

